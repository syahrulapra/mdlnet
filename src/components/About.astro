---
import fetchApi from "@lib/strapi";

const aboutAPI = await fetchApi<{
  attributes: {
    about: {
      title: string;
      description: string;
      list_abouts: {
        data: {
          id: number;
          attributes: {
            title: string;
            description: string,
            icon: {
              data: {
                id: number;
                attributes: {
                  url: string;
                };
              };
            };
          };
        }[];
      };
    };
  };
}>({
  endpoint: "home-page?populate[about][populate]=list_abouts.icon",
  wrappedByKey: "data"
});

const { title, description, list_abouts } = aboutAPI.attributes.about;
const aboutItems = list_abouts.data.map(item => item.attributes);
---

<!-- About Section -->
<section id="about" class="section-padding bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 custom-blue">
                {title}
            </h2>
            <div class="w-16 h-1 bg-custom-green mx-auto mb-8"></div>
            <p class="text-gray-600 text-lg max-w-3xl mx-auto">
                {description}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {aboutItems.map((item, index) => (
              <div class="bg-gray-50 p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                <div class={`w-10 h-10 ${index === 1 ? 'bg-custom-green' : 'bg-custom-blue'} mask mask-icon mb-4`} style={{ maskImage: `url(${import.meta.env.PUBLIC_STRAPI_URL}${item.icon?.data?.attributes?.url})` }} />
                <h3 class="text-xl font-semibold mb-3">{item.title}</h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
          ))}
        </div>
    </div>
</section>
